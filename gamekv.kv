<StringBox>:
	font_size: self.width / 1.5
	background_normal: ''
	background_down: ''
	canvas.before:
        Color:
            rgba:
            	(0, 0, 0, 1) if self.background_color==app.blank_color and self.text!='' \
            	else (.75, .75, .75, 1) if self.background_color==app.blank_color \
            	else self.background_color
        Line:
            width: 3
            rectangle: (self.x, self.y, self.width, self.height)

<StringButton@Button>:
	background_normal: ''
	background_down: ''
	background_color: app.keyboard_default_color
	color: (0, 0, 0, 1) if self.background_color==app.keyboard_default_color else (1, 1, 1, 1)
	font_size: self.width / 1.5

<EnterButton@StringButton>:
	font_size: self.width / 3.3

<BackButton@StringButton>:
	font_size: self.width / 3

<GameScreen>:
	BoxLayout:
		orientation: 'vertical'
		size: root.size

		canvas.before:
			Color:
	            rgba: (1, 1, 1, 1)
	        Rectangle:
	            pos: self.pos
	            size: self.size

	    BoxLayout:
	    	orientation: 'horizontal'
	    	size_hint_y: .2
	    	padding: 5

	    	Button:
	    		size_hint: (None, None)
	    		size: (self.parent.height * .85, self.parent.height * .85)
		        background_normal: ''
        		background_color: (0,0,0,0)
		        canvas.before:
		            Color:
		                rgba: (0, .4, 0, 1)
		            RoundedRectangle:
		                pos: self.pos
		                size: self.size
		                radius: [20,]
		        on_press: root.restart()
		        Image:
		            source: 'res/images/restart.png'
		            center_x: self.parent.center_x - (self.parent.width / 4)
		            center_y: self.parent.center_y
		            width: self.parent.width / 1.8

		    Label:
		    	id: resultlabel
		    	text: ''
		    	color: (0, 0, 0, 1)
		    	text_size: self.size
		    	font_size: self.width / (len(self.text) + 5)
		    	halign: 'center'
		    	valign: 'middle'

	    BoxLayout:
		    GridLayout:
		    	id: stringboxes
		    	spacing: 10
		    	padding: 30, 10

	    BoxLayout:
	    	orientation: 'vertical'
	    	size_hint: (1, None)
	    	height: root.height * 0.3
	    	padding: 5

	    	BoxLayout:
	    		orientation: 'horizontal'
	    		spacing: 2

	    		StringButton:
	    			id: Q
	    			text: 'Q'
	    			on_press: root.string_pressed(self.text)

