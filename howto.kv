<HowtoScreen>:
	BoxLayout:
		orientation: 'vertical'
		size: root.size

		canvas.before:
			Color:
	            rgba: (0, 1, 0, 1)
	        Rectangle:
	            pos: self.pos
	            size: self.size

	    Label:
	    	text: '遊びかた'
	    	color: (1, 1, 1, 1)

	    GridLayout:
	    	cols: 2

		    Button:
		    	text: 'ホームへ'
		    	on_press: root.manager.current = 'home'

		    Button:
		    	text: 'ゲームへ'
		    	on_press: root.manager.current = 'game'