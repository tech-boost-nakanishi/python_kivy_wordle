<NavigationBar>:
	manager: screen_manager
    orientation: 'vertical'

    Manager:
        id: screen_manager

    ActionBar:
        size_hint_y: 0.1
        background_image: ''
	    background_color: (1, 1, 1, 1)
		canvas.before:
	        Color:
	            rgba: (0, 0, 0, 1)
	        Line:
	            width: 1
	            rectangle: (self.x, self.y, self.width, self.height)
            
        ActionView:
            ActionPrevious:
            	with_previous: False
			    size_hint: None, None
    			size: 0, 0

            ActionButton:
                text: 'ホーム'
                color: app.navigation_active_color if root.manager.current=='home' else (0, 0, 0, 1)
                on_release: root.manager.current = 'home'
                size_hint_x: 1 / len(root.manager.screens)
                font_size: self.width / 7
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
                padding_y: 5
                background_normal: ''
                background_down: ''
                Image:
                	source: 'res/images/home_active.png' if root.manager.current=='home' else 'res/images/home.png'
                	center_x: self.parent.center_x + 3
                	center_y: self.parent.center_y + (self.parent.height / 6)
                	width: self.parent.width / 4

            ActionButton:
                text: '遊びかた'
                color: app.navigation_active_color if root.manager.current=='howto' else (0, 0, 0, 1)
                on_release: root.manager.current = 'howto'
                size_hint_x: 1 / len(root.manager.screens)
                font_size: self.width / 7
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
                padding_y: 5
                background_normal: ''
                background_down: ''
                Image:
                	source: 'res/images/howto_active.png' if root.manager.current=='howto' else 'res/images/howto.png'
                	center_x: self.parent.center_x + 3
                	center_y: self.parent.center_y + (self.parent.height / 6)
                	width: self.parent.width / 4

            ActionButton:
                text: 'ゲーム'
                color: app.navigation_active_color if root.manager.current=='game' else (0, 0, 0, 1)
                on_release: root.manager.current = 'game'
                size_hint_x: 1 / len(root.manager.screens)
                font_size: self.width / 7
                text_size: self.size
                halign: 'center'
                valign: 'bottom'
                padding_y: 5
                background_normal: ''
                background_down: ''
                Image:
                	source: 'res/images/game_active.png' if root.manager.current=='game' else 'res/images/game.png'
                	center_x: self.parent.center_x + 3
                	center_y: self.parent.center_y + (self.parent.height / 6)
                	width: self.parent.width / 4

<Manager>:

    HomeScreen:
        name: 'home'

    HowtoScreen:
        name: 'howto'

    GameScreen:
        name: 'game'